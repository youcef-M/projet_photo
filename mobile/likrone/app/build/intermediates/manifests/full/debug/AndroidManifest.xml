<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.julien.likrone"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cosmo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.julien.likrone.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.julien.likrone.InscriptionActivity"
            android:label="Inscription" />
        <activity
            android:name="com.example.julien.likrone.Photo"
            android:label="Photo" />
        <activity
            android:name="com.example.julien.likrone.AccueilActivity"
            android:label="Accueil" />
        <activity
            android:name="com.example.julien.likrone.CompteActivity"
            android:label="Compte" />
        <activity
            android:name="com.example.julien.likrone.ImageAdapter"
            android:label="Image" />
    </application>

</manifest>