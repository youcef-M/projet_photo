<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/viewInsc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/viewInsc"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textColor="@color/bleu"/>

    <TextView
        android:id="@+id/viewPseudo"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/viewPseudo"
        android:layout_above="@+id/email"
        android:layout_toLeftOf="@+id/pseudo"
        android:layout_marginBottom="15dp"
        android:layout_alignRight="@+id/viewEmail"
        android:layout_alignEnd="@+id/viewEmail"
        android:textColor="@color/blanc"/>

    <EditText
        android:id="@+id/pseudo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewInsc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:singleLine="true"
        android:hint="@string/pseudo"
        android:textColorHint="@color/blanc"/>

    <TextView
        android:id="@+id/viewEmail"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pseudo"
        android:layout_toLeftOf="@+id/email"
        android:layout_marginTop="15dp"
        android:text="@string/viewEmail"
        android:textColor="@color/blanc" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pseudo"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="@string/email"
        android:textColorHint="@color/blanc"/>

    <TextView
        android:id="@+id/viewMp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_toLeftOf="@+id/mp"
        android:layout_marginTop="15dp"
        android:text="@string/viewMp"
        android:textColor="@color/blanc" />

    <EditText
        android:id="@+id/mp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="@string/mp"
        android:textColorHint="@color/blanc"/>

    <TextView
        android:id="@+id/viewMp2"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mp"
        android:layout_toLeftOf="@+id/mp2"
        android:layout_marginTop="15dp"
        android:text="@string/viewMp2"
        android:textColor="@color/blanc"/>

    <EditText
        android:id="@+id/mp2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="@string/mp2"
        android:textColorHint="@color/blanc"/>

    <Button
        android:id="@+id/raz"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@id/mp2"
        android:layout_alignLeft="@+id/mp2"
        android:text="@string/effacer"
        android:background="@drawable/button_red"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/raz"
        android:layout_alignTop="@id/raz"
        android:layout_alignRight="@+id/mp2"
        android:text="@string/confirmation"
        android:background="@drawable/custom_button_green"/>

</RelativeLayout>